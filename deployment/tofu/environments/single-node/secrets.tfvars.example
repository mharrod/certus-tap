# Certus Deployment Secrets Template
#
# Copy this file to secrets.tfvars and fill in real values
# cp secrets.tfvars.example secrets.tfvars
#
# Then deploy with: tofu apply -var-file=secrets.tfvars
#
# IMPORTANT: Never commit secrets.tfvars to git!

# ==============================================================================
# Tailscale Configuration
# ==============================================================================
# Get auth key from: https://login.tailscale.com/admin/settings/keys
# Create a reusable key with appropriate expiration
tailscale_auth_key = "tskey-auth-XXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXX"

# ==============================================================================
# Database Passwords
# ==============================================================================
# Generate strong passwords: openssl rand -base64 32

db_password    = "CHANGE_ME_postgres_password"
neo4j_password = "CHANGE_ME_neo4j_password"
redis_password = "CHANGE_ME_redis_password"

# ==============================================================================
# Application Secrets
# ==============================================================================
# Generate: openssl rand -base64 64
jwt_secret = "CHANGE_ME_jwt_signing_secret"

# ==============================================================================
# GitHub Actions (Optional)
# ==============================================================================
# Get runner token from:
# https://github.com/YOUR_ORG/YOUR_REPO/settings/actions/runners/new
# Leave empty to skip GitHub Actions runner installation
github_runner_token = ""

# ==============================================================================
# Configuration (Optional Overrides)
# ==============================================================================
# Uncomment and modify as needed

# environment = "staging"
# region = "nyc3"
# droplet_size = "s-4vcpu-8gb"
# worker_count = 2

# github_repo = "your-org/your-repo"
# github_repo_url = "https://github.com/your-org/your-repo.git"
# github_branch = "main"
